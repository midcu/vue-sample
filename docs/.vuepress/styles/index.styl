.collapse {
    transition: 0.3s height ease-in-out;
}

/* scrollbar */
.va-scrollbar {
    overflow: hidden;
    position: relative;
    height: 100%;
    width: 100%;
}

.va-scrollbar:active>.va-scrollbar-bar, .va-scrollbar:focus>.va-scrollbar-bar, .va-scrollbar:hover>.va-scrollbar-bar {
    opacity: 1;
    transition: opacity .34s ease-out;
}

.va-scrollbar-bar:hover, .va-scrollbar-bar:active, .va-scrollbar-bar:focus{
    opacity: 1;
    transition: opacity 340ms ease-out;
}

.va-scrollbar-bar {
    position: absolute;
    right: 2px;
    bottom: 2px;
    z-index: 1;
    border-radius: 4px;
    opacity: 0;
    transition: opacity .12s ease-out;
}
.va-scrollbar-bar.va-is-vertical>div {
    width: 100%;
}
.va-scrollbar-bar.va-is-horizontal>div {
    height: 100%;
}
.va-scrollbar-bar.va-is-horizontal {
    height: 6px;
    left: 2px;
}
.va-scrollbar-bar.va-is-vertical {
    width: 6px;
    top: 2px;
}

.va-scrollbar-thumb {
    position: relative;
    display: block;
    width: 0;
    height: 0;
    cursor: pointer;
    border-radius: inherit;
    background-color: rgba(144,147,153,.3);
    transition: background-color .3s;
}